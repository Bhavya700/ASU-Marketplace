---
// src/components/astro/ListingCard.astro
export interface Props {
    title: string;
    price: number;
    quantity: number;
    image_url: string;
    category: string;
    date: string;
    description: string;
}

const { title, price, quantity, image_url, category, date, description } = Astro.props;
---
<div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
    <div class="relative">
        <img src={image_url} alt={`Image of ${title}`} class="w-full h-48 object-cover"/>
        <span class="absolute top-2 right-2 bg-asu-gold text-asu-dark-grey font-bold py-1 px-3 rounded-full text-sm">${price}</span>
    </div>
    <div class="p-4 flex flex-col flex-grow">
        <h3 class="text-lg font-bold mb-1">{title}</h3>
        <p class="text-sm text-gray-600 mb-2">Quantity: {quantity}</p>
        <p class="text-sm text-gray-800 mb-4 flex-grow">{description}</p>
        
        <div class="flex justify-between items-center mb-4">
            <button class="bg-gray-200 text-gray-800 font-semibold py-1 px-3 rounded text-sm hover:bg-gray-300">Message</button>
            <button class="bg-green-600 text-white font-semibold py-1 px-3 rounded text-sm hover:bg-green-700">Trade</button>
        </div>

        <div class="border-t pt-2 flex justify-between items-center text-xs text-gray-500">
            <span>{date}</span>
            <span class="bg-asu-maroon text-white font-semibold py-1 px-2 rounded">{category}</span>
        </div>
    </div>
</div>