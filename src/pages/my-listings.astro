---
import Layout from '../layouts/Layout.astro';
import { AuthProvider } from '../../context/Auth.tsx';
import ProfileCheck from '../components/react/ProfileCheck.tsx';
---
<Layout title="My Listings">
    <AuthProvider client:load>
        <ProfileCheck>
            <div class="container mx-auto px-6 py-8">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-3xl font-bold">My Listings</h1>
                    <a href="/new-listing" class="bg-asu-maroon text-white font-bold py-2 px-4 rounded hover:bg-opacity-90">
                        + New Listing
                    </a>
                </div>
                <div class="text-center py-16 bg-white rounded-lg shadow-md">
                    <p class="text-gray-600">You have no listings yet.</p>
                </div>
            </div>
        </ProfileCheck>
    </AuthProvider>
</Layout>